{
  "name": "@repo/payload",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "exports": {
    "./*": "./src/*",
    "./payload-types": "./src/payload.types.ts",
    "./payload-config": "./src/payload.config.ts"
  },
  "scripts": {
    "clean": "rm -rf node_modules .pnpm-lock.yaml",
    "format": "prettier --check . --ignore-path ../../.gitignore --ignore-path ./.prettierignore",
    "generate:types": "cross-env NODE_OPTIONS=--no-deprecation PAYLOAD_CONFIG_PATH=src/payload.config.ts payload generate:types",
    "lint": "eslint .",
    "reinstall": "pnpm clean && pnpm i",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@payloadcms/db-postgres": "3.62.1",
    "@payloadcms/next": "3.62.1",
    "@payloadcms/payload-cloud": "3.62.1",
    "@payloadcms/plugin-ecommerce": "3.62.1",
    "@payloadcms/plugin-form-builder": "3.62.1",
    "@payloadcms/plugin-seo": "3.62.1",
    "@payloadcms/richtext-lexical": "3.62.1",
    "@payloadcms/ui": "3.62.1",
    "cross-env": "^7.0.3",
    "dotenv": "16.4.7",
    "graphql": "^16.8.1",
    "next": "15.4.4",
    "payload": "3.62.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "sharp": "0.34.2"
  },
  "devDependencies": {
    "@playwright/test": "1.54.1",
    "@testing-library/react": "16.3.0",
    "@types/node": "^22.5.4",
    "@types/react": "19.1.8",
    "@types/react-dom": "19.1.6",
    "@vitejs/plugin-react": "4.5.2",
    "eslint": "^9.16.0",
    "eslint-config-next": "15.4.4",
    "jsdom": "26.1.0",
    "playwright": "1.54.1",
    "playwright-core": "1.54.1",
    "prettier": "^3.4.2",
    "typescript": "5.7.3",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.3"
  }
}
